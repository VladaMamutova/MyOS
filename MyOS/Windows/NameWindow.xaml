<Window x:Class="MyOS.NameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Loaded="Load">
    <Grid Margin="15">
        <StackPanel>
        <Label Content="Введите имя:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,4" FontSize="14"/>
        <TextBox x:Name="FileName" Width="270" HorizontalAlignment="Stretch" Height="30" TextWrapping="Wrap" VerticalContentAlignment="Center" FontSize="14" TextChanged="FileName_TextChanged" MaxLength="32"/>
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Margin="0,10,0,0">
                <Button x:Name="Оk" Content="Ok" IsEnabled="False" HorizontalAlignment="Right" Height="30" Width="80" Margin="0,0,10,0" Click="Ok_Click" FontSize="14"/>
                <Button Content="Отмена" HorizontalAlignment="Right" Width="80" FontSize="14" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="MyOS.TextEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="" Height="300" Width="500">
    <Grid>
        <TextBox x:Name="FileContent" HorizontalAlignment="Left" Height="249" Margin="0,20,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="492"/>
        <Menu HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="492">
            <MenuItem Header="File">
                <MenuItem Header="Save" Click="Save_Click" ></MenuItem>
                <Separator />
                <MenuItem Header="Exit" ></MenuItem>
            </MenuItem>
        </Menu>
    </Grid>
</Window>

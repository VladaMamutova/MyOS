        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="FrmattingWindow" SizeToContent="WidthAndHeight" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Background="#FF245D70" MouseLeftButtonDown="Move" Activated="FormattingWindow_OnActivated">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="25,40,25,40" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Идёт форматирование " FontSize="16" Foreground="LightGray"/>
            <TextBlock x:Name="Animation" Text=". . ." Width="30" FontSize="16" Foreground="LightGray"/>
        </StackPanel>
    </Grid>
</Window>
